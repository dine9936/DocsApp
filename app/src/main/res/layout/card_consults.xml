<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
 <LinearLayout
     android:visibility="gone"
     android:id="@+id/ll_consults"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal">
     <de.hdodenhof.circleimageview.CircleImageView
         android:id="@+id/doc_image"
         android:layout_width="60dp"
         android:layout_height="60dp"
         android:layout_margin="10dp"
         android:src="@drawable/guddu"
         android:padding="5dp"
         />
     <LinearLayout
         android:paddingLeft="10dp"
         android:gravity="center|start"
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:orientation="vertical">
         <TextView
             android:id="@+id/text_doc_name"
             android:textSize="12sp"
             android:textColor="@color/colorPrimary"
             android:textStyle="bold"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Dr. Chaddha Kitey"/>
         <TextView
             android:id="@+id/text_doc_spec"
             android:textSize="10sp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Neurologist"/>
     </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical">
         <TextView
             android:id="@+id/text_con_date"
             android:layout_gravity="right"
             android:layout_marginRight="5dp"
             android:layout_marginTop="10dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="06/09/2020"
             android:gravity="right"/>
     </LinearLayout>
 </LinearLayout>
    <LinearLayout

        android:id="@+id/ll_test"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/text_packege_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Well Being Premium Bucket"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_margin="5dp"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/text_package_price"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹1099"/>
        </LinearLayout>
        <LinearLayout
            android:paddingTop="30dp"
            android:paddingRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_test_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="06/09/2020" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>